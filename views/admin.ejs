<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="icon" href="/images/logo.jpg" type="image/jpeg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/styleAdmin.css">
</head>
<body>
    <header class="d-flex justify-content-between align-items-center bg-dark p-3">
        <div class="logo">
            <img src="/images/logo.jpg" alt="Restaurant Logo" class="img-fluid" style="max-width: 30px;" />
        </div>
        <nav>
            <a href="/" class="text-light me-3">Početna</a>
    
            <% if (user) { %>
                <% if (user.role === 'admin') { %>
                    <!-- Opcije za administratora -->
                    <a href="/admin" class="text-light me-3">Admin Dashboard</a>
                    <a href="/auth/logout" class="text-light">Odjava</a>
                <% } else { %>
                    <!-- Opcije za prijavljenog korisnika -->
                    <a href="/reservations" class="text-light me-3">Rezervacije</a>
                    <a href="/auth/logout" class="text-light">Odjava</a>
                <% } %>
            <% } else { %>
                <!-- Opcija za neprijavljene korisnike -->
                <a href="/auth/login" class="text-light">Prijava</a>
            <% } %>
        </nav>
    </header>
    
 
    <section class="admin-dashboard py-5">
        <div class="container">
            <h1 class="text-center mb-4">Dobrodošli, Administrator!</h1>
            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <h3 class="card-title">Ukupne narudžbe</h3>
                            <p class="card-text display-4">50</p>
                            <a href="/admin/orders" class="btn custom-btn">Pogledaj</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <h3 class="card-title">Rezervacije</h3>
                            <p class="card-text display-4">25</p>
                            <a href="/admin/reservations" class="btn custom-btn">Pogledaj</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <h3 class="card-title">Jela</h3>
                            <p class="card-text display-4">20</p>
                            <a href="/admin/menu" class="btn custom-btn">Uredi</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card text-center shadow-sm h-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h3 class="card-title">Statistika</h3>
                            <a href="/admin/stats" class="btn custom-btn mt-auto">Pogledaj</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <h3 class="card-title">Rezervacije</h3>
                            <p class="card-text display-4">25</p>
                            <a href="/admin/users" class="text-light me-3">Korisnici</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>